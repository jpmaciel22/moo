<%# layout = 'default' %>
  <% if(page.blocks) { %>
    <% for (const block of page.blocks) { %>
      <% if (block.type==='subtitle' ) { %>
        <header>
          <h1 class="header">
            <%= block.content %>
          </h1>
        </header>
        <hr>
        <main>
          <% } else if (block.type==='post' ) { %>
            <article class="post">
              <h4>
                <%= block.post_date%>
              </h4>
              <p>
                <%= block.content %>
              </p>
              <% if (block.images) { %>
                <% for(const image of block.images) {%>
                  <img src="images/<%= image.href %>" alt="imagem do post">
                  <% } %>
                    <% } %>
                      <% if (block.links && block.links.length) { %>
                        <div class="links">
                          <% for (const link of block.links) { %>
                            <a href="<%= link.href %>">
                              <%= link.text %>
                            </a>
                            <% } %>
                        </div>
                        <% } %>
            </article>
            <hr>
            <% } %>
        </main>
        <% } %>
          <% } %>